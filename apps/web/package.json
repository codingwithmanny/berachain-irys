{
  "name": "@berachain/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "with-env": "dotenv -e .env.local -- echo $DATABASE_PREFIX",
    "with-env1": "export DB_PREFIX=$(sed -n 's/^DATABASE_PREFIX=\\(.*\\)$/\\1/p' .env.local)",
    "test": "pnpm with-env echo $DATABASE_PREFIX; echo 'done'",
    "db:up": "docker compose -p nft up -d",
    "db:down": "docker compose -p nft down --remove-orphans",
    "db:gen": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "clean": "rm -rf .next; rm -rf .turbo; rm -rf node_modules;"
  },
  "dependencies": {
    "@irys/sdk": "^0.1.21",
    "@rainbow-me/rainbowkit": "^2.0.5",
    "@tanstack/react-query": "^5.28.14",
    "@upstash/qstash": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.7",
    "next": "^14.1.1",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "viem": "2.x",
    "wagmi": "^2.5.18",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  }
}
